@inherits LayoutComponentBase

<ThemeProvider>
    <MudLayout>
        <AppBar OnMenuToggle="@ToggleDrawer" />
        
        <NavDrawer @bind-IsOpen="_drawerOpen" IsMini="true" />
        
        <ContentHost>
            @Body
        </ContentHost>
    </MudLayout>
</ThemeProvider>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
