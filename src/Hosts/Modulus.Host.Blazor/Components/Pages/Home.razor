@page "/"

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Modulus</MudText>

<MudAlert Severity="Severity.Info" Class="mb-4" Icon="@MudBlazor.Icons.Material.Filled.Lightbulb">
    Modulus is a modular desktop application framework supporting multiple UI technologies.
</MudAlert>

<MudGrid Spacing="3">
    <MudItem xs="12" sm="6">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Primary" Variant="Variant.Filled">
                        <MudIcon Icon="@MudBlazor.Icons.Material.Filled.Extension" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Modular Architecture</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Build your application with pluggable modules. Each module is self-contained and can be loaded, unloaded, or updated independently.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary" Variant="Variant.Filled">
                        <MudIcon Icon="@MudBlazor.Icons.Material.Filled.Devices" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Cross-Platform</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Run on Windows, macOS, Linux, Android, and iOS with a single codebase using Blazor Hybrid or Avalonia UI.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Tertiary" Variant="Variant.Filled">
                        <MudIcon Icon="@MudBlazor.Icons.Material.Filled.Code" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Developer Friendly</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Use familiar .NET patterns and tools. The SDK provides everything you need to create powerful modules.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" sm="6">
        <MudCard Elevation="2">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Info" Variant="Variant.Filled">
                        <MudIcon Icon="@MudBlazor.Icons.Material.Filled.Store" />
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Plugin Marketplace</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Discover and install modules from the marketplace. Share your creations with the community.
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

<MudText Typo="Typo.h5" Class="mt-6 mb-3">Getting Started</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    Navigate to <MudLink Href="/modules" Typo="Typo.body1">Modules</MudLink> to manage installed modules, or visit 
    <MudLink Href="/settings" Typo="Typo.body1">Settings</MudLink> to customize your experience.
</MudText>

<MudStack Row="true" Spacing="2">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@MudBlazor.Icons.Material.Filled.Extension" Href="/modules">
        View Modules
    </MudButton>
    <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@MudBlazor.Icons.Material.Filled.Settings" Href="/settings">
        Settings
    </MudButton>
</MudStack>
