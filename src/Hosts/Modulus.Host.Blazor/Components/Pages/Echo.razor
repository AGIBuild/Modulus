@page "/echo"

<MudText Typo="Typo.h4" GutterBottom="true">Echo Tool</MudText>
<MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
    A simple echo utility that repeats your input.
</MudText>

<MudCard Elevation="2" Class="pa-4">
    <MudCardContent>
        <MudTextField @bind-Value="_inputText" 
                      Label="Enter text to echo" 
                      Variant="Variant.Outlined" 
                      Margin="Margin.Dense"
                      FullWidth="true"
                      Immediate="true"
                      Placeholder="Type something..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@MudBlazor.Icons.Material.Filled.Edit" />
        
        @if (!string.IsNullOrEmpty(_outputText))
        {
            <MudAlert Severity="Severity.Success" Class="mt-4" Icon="@MudBlazor.Icons.Material.Filled.RecordVoiceOver">
                @_outputText
            </MudAlert>
        }
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled" 
                   Color="Color.Primary" 
                   StartIcon="@MudBlazor.Icons.Material.Filled.Send"
                   OnClick="@DoEcho"
                   Disabled="@string.IsNullOrWhiteSpace(_inputText)">
            Echo
        </MudButton>
        <MudButton Variant="Variant.Text" 
                   Color="Color.Default" 
                   OnClick="@Clear">
            Clear
        </MudButton>
    </MudCardActions>
</MudCard>

<MudPaper Class="pa-4 mt-4" Elevation="0" Style="background: transparent;">
    <MudText Typo="Typo.subtitle2" Color="Color.Secondary">
        <MudIcon Icon="@MudBlazor.Icons.Material.Filled.Info" Size="Size.Small" Class="mr-1" />
        This is a sample module demonstrating the Modulus plugin architecture.
    </MudText>
</MudPaper>

@code {
    private string _inputText = string.Empty;
    private string _outputText = string.Empty;

    private void DoEcho()
    {
        if (!string.IsNullOrWhiteSpace(_inputText))
        {
            _outputText = $"Echo: {_inputText}";
        }
    }

    private void Clear()
    {
        _inputText = string.Empty;
        _outputText = string.Empty;
    }
}

