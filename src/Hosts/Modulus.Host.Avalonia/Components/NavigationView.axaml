<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:Modulus.UI.Abstractions"
             xmlns:local="using:Modulus.Host.Avalonia.Components"
             mc:Ignorable="d" d:DesignWidth="220" d:DesignHeight="300"
             x:Class="Modulus.Host.Avalonia.Components.NavigationView"
             x:DataType="local:NavigationView">
    
    <UserControl.Styles>
        <!-- Override padding when collapsed -->
        <Style Selector="local|NavigationView[IsCollapsed=True] ListBox.navList">
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="local|NavigationView[IsCollapsed=True] ListBox.navList ListBoxItem">
            <Setter Property="Padding" Value="0,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
    
    <ListBox Classes="navList"
             ItemsSource="{Binding Items, RelativeSource={RelativeSource AncestorType=local:NavigationView}}"
             SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource AncestorType=local:NavigationView}}">
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="ui:MenuItem">
                <Panel ToolTip.Tip="{Binding DisplayName}">
                    <!-- Expanded Mode -->
                    <StackPanel Orientation="Horizontal" Spacing="12"
                                IsVisible="{Binding !IsCollapsed, RelativeSource={RelativeSource AncestorType=local:NavigationView}}">
                        <TextBlock Text="{Binding Icon}" FontSize="16" 
                                   VerticalAlignment="Center" Width="20" TextAlignment="Center"
                                   Opacity="{Binding IsEnabled, Converter={x:Static local:NavigationView.EnabledToOpacityConverter}}"/>
                        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"
                                   Opacity="{Binding IsEnabled, Converter={x:Static local:NavigationView.EnabledToOpacityConverter}}"/>
                        <!-- Badge -->
                        <Border IsVisible="{Binding BadgeCount, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Background="{DynamicResource BadgeBackgroundBrush}"
                                CornerRadius="10" MinWidth="20" Padding="4,1">
                            <TextBlock Text="{Binding BadgeCount}" FontSize="11" FontWeight="Bold"
                                       Foreground="White" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Collapsed Mode (icon only) -->
                    <Grid IsVisible="{Binding IsCollapsed, RelativeSource={RelativeSource AncestorType=local:NavigationView}}"
                          Width="40" Height="24">
                        <TextBlock Text="{Binding Icon}" FontSize="18" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Opacity="{Binding IsEnabled, Converter={x:Static local:NavigationView.EnabledToOpacityConverter}}"/>
                        <!-- Badge dot for collapsed mode -->
                        <Ellipse IsVisible="{Binding BadgeCount, Converter={x:Static ObjectConverters.IsNotNull}}"
                                 Fill="{DynamicResource BadgeBackgroundBrush}"
                                 Width="8" Height="8"
                                 HorizontalAlignment="Right" VerticalAlignment="Top"
                                 Margin="0,0,4,0"/>
                    </Grid>
                </Panel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        
        <ListBox.Styles>
            <!-- Disabled item style -->
            <Style Selector="ListBoxItem">
                <Setter Property="IsHitTestVisible" Value="{Binding IsEnabled}"/>
            </Style>
        </ListBox.Styles>
    </ListBox>
</UserControl>
