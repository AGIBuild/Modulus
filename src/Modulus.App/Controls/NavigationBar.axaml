<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Modulus.App.Controls.ViewModels"
			 xmlns:cv="clr-namespace:Modulus.App.Converters"
             mc:Ignorable="d" d:DesignWidth="80" d:DesignHeight="800"
			 x:DataType="vm:NavigationBarViewModel"
             x:Class="Modulus.App.Controls.NavigationBar">
	<Design.DataContext>
		<vm:NavigationBarViewModel />
	</Design.DataContext>
	<UserControl.Resources>
		<cv:NavHighlightConverter x:Key="NavHighlightConverter" />
	</UserControl.Resources>
	<Border Background="#1A1A1A" CornerRadius="0,16,16,0">
		<Grid VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="80">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<!-- Header -->
				<RowDefinition Height="*" />
				<!-- Body -->
				<RowDefinition Height="Auto" />
				<!-- Footer -->
			</Grid.RowDefinitions>

			<!-- Header -->
			<StackPanel Grid.Row="0" Margin="0,16,0,0" HorizontalAlignment="Center">
				<Border Background="#2C2C2C" CornerRadius="12" Width="48" Height="48" Margin="0,0,0,8">
					<Image Source="avares://Modulus.App/Assets/avalonia-logo.ico" Width="28" Height="28" Stretch="Uniform"/>
				</Border>
				<TextBlock Text="Modulus" FontSize="16" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center"/>
				<TextBlock Text="v1.0.0" FontSize="11" Foreground="#888" HorizontalAlignment="Center" Margin="0,2,0,8"/>
				<!-- Header Items -->
				<ItemsControl ItemsSource="{Binding HeaderItems}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Spacing="8"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="vm:NavigationMenuItemViewModel">
							<Button Background="{Binding IsActive, Converter={StaticResource NavHighlightConverter}}"
									Foreground="White"
									ToolTip.Tip="{Binding Tooltip}"
									Width="{Binding Width}"
									Height="{Binding Height}"
									CornerRadius="{Binding CornerRadius}"
									Command="{Binding Command}"
									Margin="0,4,0,4">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>
									
									<TextBlock Text="{Binding Icon}"
											   FontFamily="Segoe MDL2 Assets"
											   FontSize="{Binding FontSize}"
											   HorizontalAlignment="Center"
											   VerticalAlignment="Center"/>
											   
									<!-- Badge for notifications -->
									<Border IsVisible="{Binding HasBadge}" 
											Background="#FF3B30" 
											CornerRadius="8" 
											Width="16" Height="16" 
											HorizontalAlignment="Right" 
											VerticalAlignment="Top"
											Margin="0,-6,-6,0">
										<TextBlock Text="{Binding BadgeText}" 
												   FontSize="10" 
												   FontWeight="Bold" 
												   HorizontalAlignment="Center" 
												   VerticalAlignment="Center" 
												   Foreground="White"/>
									</Border>
								</Grid>
							</Button>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>

			<!-- Body: Main Menu Items -->
			<Grid Grid.Row="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				
				<!-- Section Separator -->
				<Border Grid.Row="0" Height="1" Background="#333333" Margin="16,0,16,12"/>
				
				<ItemsControl Grid.Row="1" ItemsSource="{Binding BodyItems}" Margin="0,0,0,0" HorizontalAlignment="Center">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Spacing="8"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="vm:NavigationMenuItemViewModel">
							<Button Background="{Binding IsActive, Converter={StaticResource NavHighlightConverter}}"
									Foreground="White"
									ToolTip.Tip="{Binding Tooltip}"
									Width="{Binding Width}"
									Height="{Binding Height}"
									CornerRadius="{Binding CornerRadius}"
									Command="{Binding Command}"
									Margin="0,0,0,4">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>
									
									<TextBlock Text="{Binding Icon}"
											   FontFamily="Segoe MDL2 Assets"
											   FontSize="{Binding FontSize}"
											   HorizontalAlignment="Center"
											   VerticalAlignment="Center"/>
											   
									<!-- Badge for notifications -->
									<Border IsVisible="{Binding HasBadge}" 
											Background="#FF3B30" 
											CornerRadius="8" 
											Width="16" Height="16" 
											HorizontalAlignment="Right" 
											VerticalAlignment="Top"
											Margin="0,-6,-6,0">
										<TextBlock Text="{Binding BadgeText}" 
												   FontSize="10" 
												   FontWeight="Bold" 
												   HorizontalAlignment="Center" 
												   VerticalAlignment="Center" 
												   Foreground="White"/>
									</Border>
								</Grid>
							</Button>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</Grid>

			<!-- Footer: Settings/User/Feedback etc. -->
			<Grid Grid.Row="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				
				<!-- Section Separator -->
				<Border Grid.Row="0" Height="1" Background="#333333" Margin="16,0,16,12"/>
				
				<ItemsControl Grid.Row="1" ItemsSource="{Binding FooterItems}" Margin="0,0,0,24" HorizontalAlignment="Center">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Spacing="8"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="vm:NavigationMenuItemViewModel">
							<Button Background="{Binding IsActive, Converter={StaticResource NavHighlightConverter}}"
									Foreground="White"
									ToolTip.Tip="{Binding Tooltip}"
									Width="{Binding Width}"
									Height="{Binding Height}"
									CornerRadius="{Binding CornerRadius}"
									Command="{Binding Command}"
									Margin="0,0,0,4"
									AutomationProperties.Name="{Binding Tooltip}">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>
									
									<TextBlock Text="{Binding Icon}"
											   FontFamily="Segoe MDL2 Assets"
											   FontSize="{Binding FontSize}"
											   HorizontalAlignment="Center"
											   VerticalAlignment="Center"/>
											   
									<!-- Badge for notifications -->
									<Border IsVisible="{Binding HasBadge}" 
											Background="#FF3B30" 
											CornerRadius="8" 
											Width="16" Height="16" 
											HorizontalAlignment="Right" 
											VerticalAlignment="Top"
											Margin="0,-6,-6,0">
										<TextBlock Text="{Binding BadgeText}" 
												   FontSize="10" 
												   FontWeight="Bold" 
												   HorizontalAlignment="Center" 
												   VerticalAlignment="Center" 
												   Foreground="White"/>
									</Border>
								</Grid>
							</Button>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</Grid>
		</Grid>
	</Border>
</UserControl>
