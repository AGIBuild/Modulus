<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ============================================== -->
    <!-- Spacing, Corner Radius, Animation Tokens      -->
    <!-- ============================================== -->
    
    <!-- Spacing -->
    <x:Double x:Key="SpacingXSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">12</x:Double>
    <x:Double x:Key="SpacingLarge">16</x:Double>
    <x:Double x:Key="SpacingXLarge">24</x:Double>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXLarge">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusRound">999</CornerRadius>
    
    <!-- Padding/Thickness -->
    <Thickness x:Key="NavItemPadding">12,10</Thickness>
    <Thickness x:Key="NavItemCompactPadding">10</Thickness>
    <Thickness x:Key="NavItemChildPadding">10,8</Thickness>
    <Thickness x:Key="NavItemMargin">4,1</Thickness>
    <Thickness x:Key="NavItemIconMargin">0,0,12,0</Thickness>
    <Thickness x:Key="NavBadgePadding">5,2</Thickness>
    <Thickness x:Key="NavBadgeMargin">8,0,0,0</Thickness>
    <Thickness x:Key="NavChildIndent">16,0,0,0</Thickness>
    
    <!-- Sizes -->
    <x:Double x:Key="NavItemIconWidth">20</x:Double>
    <x:Double x:Key="NavBadgeMinWidth">20</x:Double>
    <x:Double x:Key="NavExpandedWidth">220</x:Double>
    <x:Double x:Key="NavCompactWidth">48</x:Double>
    
    <!-- Animation Durations (as strings, parsed by controls) -->
    <x:String x:Key="AnimationFast">0:0:0.1</x:String>
    <x:String x:Key="AnimationNormal">0:0:0.15</x:String>
    <x:String x:Key="AnimationSlow">0:0:0.25</x:String>
    
    <!-- Opacity -->
    <x:Double x:Key="DisabledOpacity">0.4</x:Double>
    
</ResourceDictionary>

