<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Modulus.UI.Avalonia.Controls">
    
    <!-- ContentHost Default Style -->
    <Style Selector="controls|ContentHost">
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:ContentHost">
                <Border CornerRadius="{TemplateBinding ContentCornerRadius}" 
                        Padding="{TemplateBinding ContentPadding}" 
                        ClipToBounds="True"
                        Background="{DynamicResource ContentBackgroundBrush}">
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding HostedContent}" 
                                      Background="Transparent"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
</Styles>
