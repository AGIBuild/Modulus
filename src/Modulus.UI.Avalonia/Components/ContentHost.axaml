<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:Modulus.UI.Avalonia.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Modulus.UI.Avalonia.Components.ContentHost"
             x:Name="Root">
    
    <Border CornerRadius="{Binding ContentCornerRadius, ElementName=Root}" 
            Padding="{Binding ContentPadding, ElementName=Root}" 
            ClipToBounds="True"
            Background="{DynamicResource ContentBackgroundBrush}">
        <ContentPresenter Content="{Binding HostedContent, ElementName=Root}" Background="Transparent"/>
    </Border>
</UserControl>
