<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimplePlugin.Views.SimpleView">
  <StackPanel Margin="20">
    <TextBlock Text="Simple Plugin Example" 
               FontSize="24" 
               HorizontalAlignment="Center" 
               Margin="0,0,0,20"/>
    <TextBlock Text="This is a minimalist plugin example demonstrating the basic structure."
               HorizontalAlignment="Center"
               TextWrapping="Wrap"
               MaxWidth="600"
               Margin="0,0,0,20"/>
    <Border BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="4" 
            Padding="20"
            MaxWidth="600"
            HorizontalAlignment="Center">
      <TextBlock Text="This plugin implementation follows the standard Modulus plugin structure."
                TextWrapping="Wrap"/>
    </Border>
  </StackPanel>
</UserControl>
