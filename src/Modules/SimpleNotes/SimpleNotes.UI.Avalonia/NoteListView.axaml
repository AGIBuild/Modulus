<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SimpleNotes.Core.Application.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SimpleNotes.UI.Avalonia.NoteListView"
             x:DataType="vm:NoteListViewModel">
  <Grid RowDefinitions="Auto, *, Auto">
    <TextBlock Text="{Binding Title}" FontSize="24" Margin="10"/>
    
    <ListBox Grid.Row="1" ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}" Margin="10">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding ModifiedAt}"/>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
    
    <Border Grid.Row="2" Margin="10" BorderBrush="Gray" BorderThickness="1" IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}">
        <StackPanel Margin="10">
             <TextBlock Text="{Binding SelectedNote.Title}" FontWeight="Bold" FontSize="18"/>
             <TextBlock Text="{Binding SelectedNote.Content}" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
  </Grid>
</UserControl>
