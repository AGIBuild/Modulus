<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Modulus.UI.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Modulus.Modules.ComponentsDemo.UI.Avalonia.Pages.DisabledDemoPage">
    
    <StackPanel Spacing="16">
        <TextBlock Text="Disabled States Demo"
                   FontWeight="Bold"
                   FontSize="16"/>
        
        <TextBlock Text="Menu items can be disabled to prevent user interaction:"
                   TextWrapping="Wrap"/>
        
        <Border Background="#15000000"
                CornerRadius="8"
                Padding="8">
            <controls:NavigationView x:Name="DisabledNavView"
                                     Width="220"
                                     Height="200"
                                     HorizontalAlignment="Left"/>
        </Border>
        
        <Border Background="#10000000"
                CornerRadius="6"
                Padding="12">
            <StackPanel Spacing="4">
                <TextBlock Text="Disabled State Features:" FontWeight="SemiBold"/>
                <TextBlock Text="- IsEnabled property controls clickability"/>
                <TextBlock Text="- Visual feedback with reduced opacity"/>
                <TextBlock Text="- Cursor changes to indicate non-interactive state"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>

