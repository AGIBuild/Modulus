<MudText Typo="Typo.body1" Class="mb-4">
    Full keyboard navigation support for accessibility and power users.
</MudText>

<MudPaper Elevation="1" Class="pa-4 mt-4">
    <MudText Typo="Typo.subtitle1" Class="mb-3">Keyboard Shortcuts</MudText>
    
    <MudSimpleTable Dense="true" Hover="true">
        <thead>
            <tr>
                <th>Key</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><MudChip T="string" Size="Size.Small">↑</MudChip> / <MudChip T="string" Size="Size.Small">↓</MudChip></td>
                <td>Move selection up/down</td>
            </tr>
            <tr>
                <td><MudChip T="string" Size="Size.Small">Enter</MudChip> / <MudChip T="string" Size="Size.Small">Space</MudChip></td>
                <td>Activate selected item</td>
            </tr>
            <tr>
                <td><MudChip T="string" Size="Size.Small">→</MudChip></td>
                <td>Expand group</td>
            </tr>
            <tr>
                <td><MudChip T="string" Size="Size.Small">←</MudChip></td>
                <td>Collapse group</td>
            </tr>
            <tr>
                <td><MudChip T="string" Size="Size.Small">Escape</MudChip></td>
                <td>Collapse all groups</td>
            </tr>
            <tr>
                <td><MudChip T="string" Size="Size.Small">Tab</MudChip></td>
                <td>Standard focus navigation</td>
            </tr>
        </tbody>
    </MudSimpleTable>
</MudPaper>

<MudAlert Severity="Severity.Info" Class="mt-4">
    <MudText Typo="Typo.body2">
        <strong>Try it:</strong> Focus the navigation panel and use keyboard shortcuts to navigate!
    </MudText>
</MudAlert>

